<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_template"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/pacificoregular"
            android:text="@string/str_time_on_earth"
            android:textColor="@android:color/white"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/txt_label_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_label"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/pacificoregular"
            android:text="@string/str_in_minutes"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txt_date_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_label_two"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/pacificoregular"
            android:textColor="@color/white"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/txt_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_date_select"
            android:layout_centerHorizontal="true"
            android:text="@string/str_selected_date"
            android:fontFamily="@font/opensanssemibold"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:text="@string/str_14400_minutes"
            android:textStyle="bold"
            android:fontFamily="@font/pacificoregular"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_minutes"
            android:layout_centerHorizontal="true"
            android:text="@string/str_1_day"
            android:textStyle="bold"
            android:fontFamily="@font/pacificoregular"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/str_birthday"
            android:textAllCaps="false"
            android:fontFamily="@font/pacificoregular"
            android:layout_margin="20dp"/>


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>